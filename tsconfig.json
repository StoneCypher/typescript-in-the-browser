{
  "compilerOptions": {
    "target": "es6",   
    "module": "commonjs", 
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "lib": ["es2018", "dom"],  
    "outDir": "./dist", 
    "rootDir": ".",
    "strict": false, 
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true
    
  }, 
  "exclude": ["assets", "test", "static", "dist", "scripts"]
}