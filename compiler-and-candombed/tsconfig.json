{
  "compilerOptions": {
    "target": "es6",   
    "module": "commonjs", 
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "lib": ["es2018", "dom"],
    "outDir": "./dist", 
    "rootDir": ".",
    "strict": true, 
    "pretty": false,
    "strictNullChecks": false,
    // "noImplicitAny": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true
  }, 
  "include": [
    "src"
  ], 
  "exclude": [
    "src/examples"
  ]
}